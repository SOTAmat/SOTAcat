{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug - Seeed Xiao ESP32C3",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run",
                "-e",
                "seeed_xiao_esp32c3_debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$platformio"
            ]
        },
        {
            "label": "Build Release - Seeed Xiao ESP32C3",
            "type": "shell",
            "command": "platformio",
            "args": [
                "run",
                "-e",
                "seeed_xiao_esp32c3_release"
            ],
            "problemMatcher": [
                "$platformio"
            ]
        }
    ]
}
